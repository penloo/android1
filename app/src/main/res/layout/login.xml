<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/split3"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="270dp">

        <ImageView
            android:id="@+id/icon_school"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="90dp"
            android:src="@drawable/border2" />

        <EditText
            android:id="@+id/text_school"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="150dp"
            android:background="@drawable/edittext"
            android:hint=" 대 학 교" />

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_school"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/border3" />

        <EditText
            android:id="@+id/text_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_school"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext"
            android:hint=" 학 번" />

        <ImageView
            android:id="@+id/icon_password"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_user"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/border" />

        <EditText
            android:id="@+id/text_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_user"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext"
            android:hint="  비밀번호" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_password"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round"
            android:backgroundTint="#FF9DCB"
            android:text="로그인"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round"
            android:backgroundTint="#F3D5FF"
            android:text="회원가입"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#959595"/>

    </RelativeLayout>

</LinearLayout>