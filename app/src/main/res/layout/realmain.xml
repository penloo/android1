<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainreal">

    <Button
        android:id="@+id/onoffBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/onoff"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="330dp">

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/serch"
            android:layout_marginLeft="40dp"/>
        <Button
            android:id="@+id/myNoticeBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/write"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/myInfoBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/my"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</LinearLayout>