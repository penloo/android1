<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/noticeBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="컴퓨터알고리즘 스터디방"
            android:textColor="#FFB345"
            android:fontFamily="@font/bm"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/noticeOnOff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/on_off_button"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edittext"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/RoomInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="룸 정보"
            android:background="@drawable/border"
            android:fontFamily="@font/bm"
            android:layout_marginLeft="40dp" />
        <Button
            android:id="@+id/ScheduleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border2"
            android:text="스케줄"
            android:fontFamily="@font/bm"
            android:layout_marginLeft="30dp" />

        <Button
            android:id="@+id/noticeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border3"
            android:layout_marginLeft="30dp"
            android:text="게시판"
            android:fontFamily="@font/bm"/>



    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/makeRoomBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/add" />



</LinearLayout>